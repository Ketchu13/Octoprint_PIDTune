<form class="form-horizontal" onsubmit="return false;">
    <h3>{{ _('Graph') }}</h3>
    <div class="control-group">
        <label class="control-label" for="pidtune-settings-temperatureCutoff">{{ _('Graph cutoff') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" min="1" class="input-mini text-right" data-bind="value: settings.plugins.pidtune.temperature_cutoff" id="pidtune-settings-temperatureCutoff">
                <span class="add-on">min</span>
            </div>
            <span class="help-block">{{ _('Needs a restart of OctoPrint to become active.') }}</span>
        </div>
    </div>
    <h3>{{ _('Thermal max temps limitation') }}</h3>
    <div class="control-group">
        <label class="control-label" for="pidtune-settings-h_tm">{{ _('Hotend Max Temp') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" min="1" max="400" class="input-mini text-right" data-bind="value: settings.plugins.pidtune.h_tm" id="pidtune-settings-h_tm">
                <span class="add-on">°C</span>
            </div>
            <span class="help-block">{{ _('TODO') }}</span>
        </div>
        <label class="control-label" for="pidtune-settings-b_tm">{{ _('Bed Max Temp') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" min="1" max="120" class="input-mini text-right" data-bind="value: settings.plugins.pidtune.b_tm" id="pidtune-settings-b_tm">
                <span class="add-on">°C</span>
            </div>
            <span class="help-block">{{ _('TODO') }}</span>
        </div>
    </div>
</form>
